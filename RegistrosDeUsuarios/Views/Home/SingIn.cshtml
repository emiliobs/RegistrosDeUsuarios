@model RegistrosDeUsuarios.Models.SingIn

@{
    ViewBag.Title = "SingIn";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<div class="conteiner">
    <div class="card card-conteiner">
        <h3 class="titleLogin">Registrarse.</h3>

        @using (Html.BeginForm("SingIn", "Home", FormMethod.Post, new { @class="form-sigin"}))
        {
            @Html.ValidationSummary(true,"", new { @class="text-danger"})

            <div>
                @Html.TextBoxFor(s=>s.Name, new {@class="form-control", @placeholder="Name" })
                @Html.ValidationMessageFor(s=>s.Name,"",new {@class="text-danger" })
            </div><br />

            <div>
                @Html.TextBoxFor(s => s.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                @Html.ValidationMessageFor(s => s.LastName, "", new { @class = "text-danger" })
            </div><br />

            <div>
                @Html.TextBoxFor(s => s.User, new { @class = "form-control", @placeholder = "User" })
                @Html.ValidationMessageFor(s => s.User, "", new { @class = "text-danger" })
            </div><br />

            <div>
                @Html.TextBoxFor(s => s.Email, new { @class = "form-control", @placeholder = "E-Mail" })
                @Html.ValidationMessageFor(s => s.Email, "", new { @class = "text-danger" })
            </div><br />

            <div>
                @Html.PasswordFor(s => s.Password, new { @class = "form-control", @placeholder = "Password" })
                @Html.ValidationMessageFor(s => s.Password, "", new { @class = "text-danger" })
            </div><br />

            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <p class="errorMessage">@ViewBag.Message</p>
            }

            <input  type="submit" value="Registrar." class="btn btn-signin" />
        }<br />


        @Html.ActionLink("Login","Index","Home",new { }, new {@class="btn btn-success" })

    </div>
</div>

